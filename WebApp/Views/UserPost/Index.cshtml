@model UserPostViewModel

@{
    ViewBag.Title = "Posts";
    Layout = "_Layout";
}

<div id="library" class="uk-section uk-section-default">
    <div class="uk-container">
        <h3>Posts</h3>

        <div class="uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-child-width-1-5@xl" uk-grid>
            @foreach (var post in Model.Posts)
            {
                <div class="uk-card uk-card-hover uk-card-default">
                        <div class="uk-card-media-top">
                            <img src="@post.UrlPhoto" alt="none">
                        </div>

                        <div class="uk-card-body">
                            <div class="uk-grid-small uk-flex-middle" uk-grid>
                                <div class="uk-width-expand">
                                </div>
                            </div>
                        </div>
                    </div>
                    }
        </div>
    </div>
</div>